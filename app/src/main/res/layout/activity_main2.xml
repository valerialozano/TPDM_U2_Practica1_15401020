<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".Main2Activity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+   Nueva tarea"
        android:background="#FFF"
        android:layout_gravity="start"
        android:textAlignment="textStart"
        android:textColor="#4B4B4B"
        android:textSize="17dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/nuevaTarea"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layoutCamposT"></LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Id     DescripciÃ³n                  Fecha"
        android:textStyle="bold"
        android:textSize="19dp"
        android:textColor="#4B4B4B" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listViewT"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text=" Eliminar lista"
            android:background="#D5D5D5"
            android:layout_marginRight="10dp"
            android:textAlignment="center"
            android:textColor="#4B4B4B"
            android:textSize="17dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/eliminarLista"/>
        <Button
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text=" Actualizar lista"
            android:background="#D5D5D5"
            android:textAlignment="center"
            android:textColor="#4B4B4B"
            android:textSize="17dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/actualizarLista"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Regresar"
        android:background="#D5D5D5"
        android:textAlignment="center"
        android:textColor="#4B4B4B"
        android:textSize="17dp"
        android:layout_marginTop="10dp"
        android:id="@+id/regresar2"/>

</LinearLayout>