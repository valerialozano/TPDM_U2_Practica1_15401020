<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".Main3Activity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="19dp"
        android:hint="DescripciÃ³n"
        android:id="@+id/descripcionTarea"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="19dp"
        android:hint="Realizado en"
        android:id="@+id/fechaTarea"
        android:layout_marginTop="15dp"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terminada"
        android:textSize="19dp"
        android:checked="false"
        android:layout_marginTop="20dp"
        android:id="@+id/check"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Estatus: Pendiente"
        android:textSize="19dp"
        android:textColor="#4B4B4B"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:id="@+id/estatus"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text=" Eliminar tarea"
            android:background="#D5D5D5"
            android:layout_marginRight="10dp"
            android:textAlignment="center"
            android:textColor="#4B4B4B"
            android:textSize="17dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/eliminarTarea"/>
        <Button
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text=" Actualizar tarea"
            android:background="#D5D5D5"
            android:textAlignment="center"
            android:textColor="#4B4B4B"
            android:textSize="17dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/actualizarTarea"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Regresar"
        android:background="#D5D5D5"
        android:textAlignment="center"
        android:textColor="#4B4B4B"
        android:textSize="17dp"
        android:layout_marginTop="10dp"
        android:id="@+id/regresar3"/>

</LinearLayout>